body{font-family:montserrat,sans-serif;font-size:.9em}h1,h2,h3,h4,h5,h6{font-family:asul,sans-serif;font-weight:500}.post-list__container{margin-left:0}.post{margin-left:0}.splash-container{height:auto;min-height:80%}main{padding-top:calc(3rem + 4rem);height:unset}main>div{max-width:1200px}footer{justify-content:center}footer{padding-top:0;text-align:center}footer>div{margin:0;padding:0}footer>div.copyright{font-size:.6em;color:#6d6d6d}footer a{color:#575757;text-decoration:none}footer ul{padding:0;margin:0;list-style:none;list-style-type:none;display:inline}ul.copyright-list{color:#bdbdbd}ul.copyright-list a{color:#a3a3a3}ul.copyright-list>li{display:inline}ul.copyright-list>li:not(:last-child)::after{content:" | "}.social-icons{display:flex;justify-content:center}img.img-inline{display:inline-block;vertical-align:-11%;height:1.3em}#breadcrumb{font-size:.6em;color:#6d6d6d}#breadcrumb a{text-decoration:none;color:#6d6d6d}.social-icons{display:flex;justify-content:center}.social-icons__link{padding:.8rem}.social-icons__link:not(:last-child){margin-right:1em}.social-icons__link .social-icons__icon{width:1rem;height:1rem;background-size:contain;background-repeat:no-repeat}.post__comments{font-size:.7em}a{color:#575757;font-weight:600;text-decoration:none}a:hover{border-bottom:dotted 1px #000;text-decoration:none}